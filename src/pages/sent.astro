---
import Layout from "../layouts/PageLayout.astro"
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import Footer from "../components/Footer.astro";
---

<Layout pageTitle="Michael Gauci">
  <div class="flex flex-col min-h-screen">
    <div class="flex flex-col align-middle items-center">
      <span class="font-serif text-serif-md">Thank you</span>
      <div style="width: 50%; height: 20%;">
          <LottieAnimation src='/assets/sent.json' autoplay="visible" />
      </div>
    <span class="font-sans text-sans-md">Your message has been sent. You should expect a reply within the next few hours.</span>
    <a href="/">
      <button class="box-btn [&&]:px-12 inline-block">Back to home</button>
    </a>
    </div>
    <Footer/>
  </div>
</Layout>
