---
import { frontmatter, Content } from '../policy.md';
import Layout from "../layouts/PageLayout.astro";
import Prose from "../layouts/Prose.astro"
import Footer from "../components/Footer.astro";
---

<Layout pageTitle="Michael Gauci">
  <div class="flex flex-col items-center px-6">
    <div class="relative text-left max-w-[850px]">
      <span class="font-bold font-serif text-6xl pt-24 pb-4 block">{frontmatter.title}</span>
      <span class="font-sans font-light text-sm block pb-12">Updated {frontmatter.date}</span>
      <Prose>
        <Content />
      </Prose>
    </div>
  </div>
  <Footer/>
</Layout>