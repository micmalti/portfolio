---
const { post } = Astro.props;

---

<div class="flex gap-2 post-card">
  <a data-tags={JSON.stringify(post.data.tags)} class="visited:text-gray-400" href={`/notes/${post.slug}`}>{post.data.title}</a>
  <span>{post.data.created.short}</span>
  <div>
    {post.data.tags.map((tag: string) => (
      <div>{tag}</div>
    ))}
  </div>
</div>
