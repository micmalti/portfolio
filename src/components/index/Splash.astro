---
import { Image } from "astro:assets";
import ProfileImage from "../../images/profile.png";
import SectionLayout from "../../layouts/SectionLayout.astro";
import Banner from "./components/AvailabilityTag.astro";
---

<SectionLayout sectionTag="home">
  <div class="md:items-centerflex flex flex-col items-center justify-center text-center md:flex-row">
    <Image src={ProfileImage} alt="Profile image" />
    <div class="flex min-h-screen flex-col items-center justify-center">
      <h1 class="whitespace-nowrap p-4 font-serif text-6xl">Michael Gauci</h1>
