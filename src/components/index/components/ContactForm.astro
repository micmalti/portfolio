<div>
  <form action="https://submit-form.com/IPuWegcRy" data-botpoison-public-key="pk_c2748b4c-5a20-471e-9c06-9bc9c9ca3de9" method="POST">
    <input type="hidden" name="_redirect" value={`${siteUrl}/sent`}/>
    <div class="font-sans text-sans-md grid md:grid-cols-2 grid-cols-1 grid-rows-8 md:grid-rows-5 gap-2">
        <fieldset class="flex flex-col md:flex-row gap-2 md:gap-8">
          <div class="inline-flex items-center gap-2">
            <label class="relative flex items-center" for="company">
              <input class="peer h-5 w-5 appearance-none rounded-full border border-white transition duration-300 border-opacity-25 checked:border-opacity-100" type="radio" id="company" name="contact" value="company" checked>
              <span class="absolute bg-white w-3 h-3 rounded-full opacity-0 peer-checked:opacity-100 transition-opacity duration-300 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
              </span>
            </label>
            <label for="company">I'm a company representative</label>
          </div>
          <div class="inline-flex items-center gap-2">
            <label class="relative flex items-center" for="individual">
              <input class="peer h-5 w-5 appearance-none rounded-full border border-white border-opacity-25 transition duration-300 checked:border-opacity-100" type="radio" id="individual" name="contact" value="individual">
              <span class="absolute bg-white w-3 h-3 rounded-full opacity-0 peer-checked:opacity-100 transition-opacity duration-300 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
              </span>
            </label>
            <label for="individual">I'm an individual</label>
          </div>
        </fieldset>
        <input class="form-field" type="text" id="name" name="name" autocomplete="name" placeholder="Name" required>
        <input class="form-field bg-primary" type="text" id="surname" name="surname" autocomplete="surname" placeholder="Surname" required>
        <input class="form-field" id="email" name="email" type="email" autocomplete="email" placeholder="Email" required>
        <input class="form-field" type="tel" id="phone" name="phone" placeholder="Phone (Optional)">
        <input class="form-field" id="subject" name="subject" placeholder="Subject (Optional)">
        <textarea class="form-field md:row-span-4 row-span-2 resize-none h-full" id="message" name="message" placeholder="Message" required></textarea>
        <div class="flex items-center gap-3">
          <div class="relative flex items-center w-12 h-6 flex-shrink-0">
            <input type="checkbox" class="z-10 absolute left-1/2 -translate-x-1/2 w-12 h-6 peer appearance-none rounded-md" id="policy" name="policy" required/>
            <span class="z-0 relative w-full h-full flex items-center bg-primary border border-white border-opacity-25 rounded-full duration-300 ease-in-out peer-checked:border-opacity-100"></span>
            <span class="absolute w-4 h-4 bg-primary border border-white border-opacity-25 rounded-full shadow-md duration-300 transform translate-x-1 peer-checked:translate-x-7 peer-checked:border-opacity-100 peer-checked:bg-white"></span>
          </div>
          <span>By selecting this, you agree to the site's <a href="/policy" class="hyperlink">privacy policy</a>.</span>
        </div>
    </div>
    <button class="box-btn [&&]:px-12 inline-block mt-4">Send message</button>
  </form>
</div>