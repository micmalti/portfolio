---
const siteUrl = Astro.site;
---

<div>
  <form action="https://submit-form.com/IPuWegcRy" data-botpoison-public-key="pk_c2748b4c-5a20-471e-9c06-9bc9c9ca3de9" method="POST">
    <input type="hidden" name="_redirect" value={`${siteUrl}/sent`} />
    <div class="@container">
      <div class="grid grid-cols-1 gap-2 font-sans text-sans-md @5xl:grid-cols-[2fr_3fr] md:gap-4">
        <!-- grid-rows-8 @5xl:grid-rows-5 -->
        <fieldset class="flex flex-col gap-2 @5xl:flex-row @5xl:gap-8">
          <div class="inline-flex items-center gap-2">
            <label class="relative flex items-center" for="company">
              <input class="peer h-5 w-5 appearance-none rounded-full border border-white border-opacity-25 transition duration-300 checked:border-opacity-100" type="radio" id="company" name="contact" value="company" checked />
              <span class="absolute left-1/2 top-1/2 h-3 w-3 -translate-x-1/2 -translate-y-1/2 transform rounded-full bg-white opacity-0 transition-opacity duration-300 peer-checked:opacity-100"></span>
            </label>
            <label for="company">I'm a company representative</label>
          </div>
          <div class="inline-flex items-center gap-2">
            <label class="relative flex items-center" for="individual">
              <input class="peer h-5 w-5 appearance-none rounded-full border border-white border-opacity-25 transition duration-300 checked:border-opacity-100" type="radio" id="individual" name="contact" value="individual" />
              <span class="absolute left-1/2 top-1/2 h-3 w-3 -translate-x-1/2 -translate-y-1/2 transform rounded-full bg-white opacity-0 transition-opacity duration-300 peer-checked:opacity-100"></span>
            </label>
            <label for="individual">I'm an individual</label>
          </div>
        </fieldset>

        <div class="flex flex-col gap-2 md:flex-row md:gap-2">
          <input class="form-field md:w-1/2" type="text" id="name" name="name" autocomplete="name" placeholder="Name" required />
          <input class="form-field md:w-1/2" type="text" id="surname" name="surname" autocomplete="surname" placeholder="Surname" required />
        </div>

        <input class="form-field @5xl:col-start-1 @5xl:row-start-3" id="email" name="email" type="email" autocomplete="email" placeholder="Email" required />
        <input class="form-field @5xl:col-start-1 @5xl:row-start-4" type="tel" id="phone" name="phone" placeholder="Phone (Optional)" />
        <input class="form-field @5xl:col-start-2 @5xl:row-start-1" id="subject" name="subject" placeholder="Subject (Optional)" />
        <textarea class="form-field row-span-2 h-full resize-none @5xl:col-start-2 @5xl:row-span-3 @5xl:row-start-2" id="message" name="message" placeholder="Message" required></textarea>
        <div class="flex items-center gap-3 @5xl:col-start-1 @5xl:row-start-5 md:pt-4">
          <div class="relative flex h-6 w-12 flex-shrink-0 items-center">
            <input type="checkbox" class="peer absolute left-1/2 z-10 h-6 w-12 -translate-x-1/2 appearance-none rounded-md" id="policy" name="policy" required />
            <span class="relative z-0 flex h-full w-full items-center rounded-full border border-white border-opacity-25 bg-primary duration-300 ease-in-out peer-checked:border-opacity-100"></span>
            <span class="absolute h-4 w-4 translate-x-1 transform rounded-full border border-white border-opacity-25 bg-primary shadow-md duration-300 peer-checked:translate-x-7 peer-checked:border-opacity-100 peer-checked:bg-white"></span>
          </div>
          <span>By selecting this, you agree to the site's <a href="/policy" class="hyperlink">privacy policy</a>.</span>
        </div>
      </div>
    </div>
    <button class="box-btn mb-16 mt-4 inline-block md:mt-12 [&&]:px-12">Send message</button>
  </form>
</div>

