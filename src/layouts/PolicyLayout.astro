---
import "@fontsource-variable/inter/opsz.css";
import "@fontsource-variable/source-serif-4/opsz.css";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContextMenu from "../components/ContextMenu.astro";
import type { PolicyFrontmatter } from "../types";

interface Props {
  headings: import("astro").MarkdownHeading[];
  frontmatter: PolicyFrontmatter
}

const { headings, frontmatter } = Astro.props as Props;
---

<html class='lang="en"'>
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/lenis@1.1.14/dist/lenis.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/lenis@1.1.14/dist/lenis.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 " />
    <meta name="generator" content={Astro.generator} />
    <title>Michael Gauci | {frontmatter.title}</title>
  </head>
  <body class="scroll-smooth bg-secondary text-primary selection:bg-primary selection:text-secondary dark-cursor">
    <div id="smooth-wrapper">
      <div id="smooth-content">
        <div class="grid grid-rows-[auto_1fr] min-h-screen md:mx-32">
          <div id="header-row" class="sticky top-0 z-20 bg-primary text-secondary selection:bg-secondary selection:text-primary light-cursor overflow-hidden">
            <Header />
            <div id="collapse-header" class="md:pl-12 pl-4 pt-8 pb-6 md:pt-4 md:pb-12">
              <span class="block font-serif text-serif-md">{frontmatter.title}</span>
              <span class="block pt-4 font-sans text-sans-sm font-light">Updated {frontmatter.date}</span>
            </div>
          </div>
          <div id="content" class="text-left items-center mx-4 md:mx-0 md:flex-row md:items-start mt-4 md:mt-12">
              <div class="flex justify-center gap-8">
                <div id="markdown-content" class="flex-1 prose prose-a:hyperlink-dark prose-h2:font-serif prose-h2:text-serif-sm prose-h2:text-primary prose-p:text-sans-md prose-p:font-normal prose-p:text-primary prose-strong:text-sans-md prose-strong:font-bold prose-strong:text-primary prose-li:text-sans-md prose-li:font-normal prose-li:text-primary pb-24">
                  <slot />
                </div>        
                <div id="context-menu" class="hidden md:block shrink-0">
                  <div class="fixed">
                    <ContextMenu headings={headings} levels={3} />
                  </div>
                </div>
            </div>
          </div>
        </div>
        <div class="mx-4 pb-12 md:mx-32 md:pb-0">
          <Footer footerTheme="dark" />
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/scripts/SmoothScrolling.js"></script>
    <script type="text/javascript" src="/scripts/ContextMenu.js"></script>
    <script type="text/javascript" src="/scripts/Modal.js"></script>
    <script type="text/javascript" src="/scripts/ScrollbackHeader.js"></script>
  </body>
</html>
