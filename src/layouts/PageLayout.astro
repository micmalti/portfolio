---
import '@fontsource-variable/inter/opsz.css';
import '@fontsource-variable/source-serif-4/opsz.css';
import ContactButton from "../components/ContactButton.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html class='lang="en"'>
  <head>
    <meta charset="utf-8" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/split-type@0.3.4/umd/index.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
    <!-- <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollToPlugin.min.js"></script> -->
    <!-- <script is:inline src="https://unpkg.com/@studio-freight/lenis@1.0.42/dist/lenis.min.js"></script> -->
    <script is:inline src="/scripts/helpers/horizontalLoop.js"></script>
    <script is:inline src="https://unpkg.com/@botpoison/browser" async></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0 " />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-primary text-secondary selection:bg-secondary selection:text-primary scroll-smooth"> <!-- max-w-[1140px] mx-auto -->
    <div id="smooth-wrapper">
      <div id="smooth-content">
        <ContactButton/>
        <slot />
      </div>
    </div>
    <!-- <script type="text/javascript" src="/scripts/SmoothScrolling.js"></script> -->
    <!-- <script type="text/javascript" src="/scripts/SectionPinning.js"></script> -->
    <script type="text/javascript" src="/scripts/Blackout.js"></script>
    <script type="text/javascript" src="/scripts/Tagline.js"></script>
    <script type="text/javascript" src="/scripts/Timeline.js"></script>
    <script type="text/javascript" src="/scripts/ContactButton.js"></script>
    <script type="text/javascript" src="/scripts/FormHandler.js"></script>
  </body>
</html>
